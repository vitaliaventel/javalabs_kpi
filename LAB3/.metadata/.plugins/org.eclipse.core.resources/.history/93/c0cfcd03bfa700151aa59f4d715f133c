package my.test;

import java.util.Scanner;
import my.lab3_2.*;


public class VectorTest {
	
	public static void main(String[] args){
		
		Scanner scan = new Scanner(System.in);
		System.out.print("Input size of class Vector = ");
		int n = scan.nextInt();
		System.out.print("Input size of VectorArray = ");
		int m = scan.nextInt();
		
		Vector[] vectors = new Vector[m];
		int[] array = new int[n];
		for(int i = 0; i < m; i++){
			for(int j = 0; j < n; j++){
				System.out.print("Input " + j + " number of Vector " + i + " = ");
				int temp = scan.nextInt();
				array[j] = temp;
			}
			vectors[i] = new Vector(array);
		}

		 System.out.println(vectors[0].toString() + " +  " +
                 vectors[1].toString() + " =  " + 
                 vectors[0].addition(vectors[1]).toString());

		 System.out.println(vectors[1].toString() + " -  " + 
				 vectors[1].toString() + " =  " + 
				 vectors[1].sub(vectors[1]).toString());

		 System.out.println(vectors[0].toString() + " *  " + 
				 vectors[1].toString() + " =  " + 
				 vectors[0].multiply(vectors[1]).toString());
		 
		 System.out.println("Increment of the vector ( " + vectors[0].toString() + " ) = "
                 + vectors[0].inc());
		 
		 System.out.println("Decrement of the vector ( " + vectors[0].toString() + " ) = "
                 + vectors[0].dec());

		 System.out.println("Scalar multiply (" + vectors[0].toString() + ") and ( " + 
				 					   vectors[1].toString() + ") = " + 
				 					  vectors[0].scalarMultiply(vectors[1]));

		 System.out.println("Length of the vector ( " + vectors[0].toString() + " ) = "
                                      + vectors[0].length());

		 System.out.println("The angle between (" + vectors[0].toString() + ") and ( " + 
				 					   vectors[1].toString() + ") =  " + 
                                       vectors[0].angle(vectors[1]));
		
	}

}
